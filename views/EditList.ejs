<!doctype html>
<html>
    <%- include('head'); -%>
    <body>
        <%- include('navbar', {n: name}); -%>
        <div id="bg"></div>  
        <div class="container" style="min-height: 100%;">
            <div class="row m-5">
            </div>
            <h1>Edit List</h1>
            <div class="md-form active-pink active-pink-2 mb-3 mt-0">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1">List Name</span>
                    </div>
                    <input class="form-control" type="text">
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1"><i class="fas fa-search"></i></span>
                    </div>
                    <input class="form-control" type="text" placeholder="What game are you looking for?" aria-label="What game are you looking for?" aria-describedby="basic-addon1" id="selector">
                </div>
            </div>
            <div class="row">
                <div class="col-12 col-sm-8 col-lg-12">
                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div class="image-parent">
                                <img src="https://s3.eu-central-1.amazonaws.com/bootstrapbaymisc/blog/24_days_bootstrap/don_quixote.jpg" class="img-fluid" alt="quixote">
                                Game 1
                            </div>
                            <div>
                                <div class="row">
                                    <div class="col-md-5"></div>
                                    <div class="col-md-4" align="right">
                                        <p>Steam price:</p>
                                    </div>
                                    <div class="col-md-3 align-self-center">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="basic-addon2"><i class="fas fa-euro-sign"></i></span>
                                            </div>
                                            <input readonly type="text" class="form-control" id="staticPrice" value="16">
                                        </div>
                                    </div>   
                                </div>
                                <div class="row">
                                    <div class="col-md-5"></div>
                                    <div class="col-md-4" align="right">
                                        <p>Best price:</p>
                                    </div> 
                                    <div class="col-md-3 align-self-center">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="basic-addon2"><i class="fas fa-euro-sign"></i></span>
                                            </div>
                                            <input readonly type="text" class="form-control" id="staticPrice" value="8">
                                        </div>
                                    </div>  
                                </div>
                                <form class="form-group row">
                                    <div class="col-md-5"></div>
                                    <div class="col-md-4" align="right"><p>Notify me when the price is below:</p></div>
                                    <div class="col-md-3 align-self-center">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="basic-addon2"><i class="fas fa-euro-sign"></i></span>
                                            </div>
                                            <input type="text" class="form-control" id="staticPrice" placeholder="10">
                                            <button class="btn btn-primary"><i class="fas fa-bell"></i></button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div class="image-parent">
                                <img src="https://s3.eu-central-1.amazonaws.com/bootstrapbaymisc/blog/24_days_bootstrap/as_I_lay.jpg" class="img-fluid" alt="lay">
                                Game 2
                            </div>
                            <div>
                                <div class="row">
                                    <div class="col-md-5"></div>
                                    <div class="col-md-4" align="right">
                                        <p>Steam price:</p>
                                    </div>
                                    <div class="col-md-3 align-self-center">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="basic-addon2"><i class="fas fa-euro-sign"></i></span>
                                            </div>
                                            <input readonly type="text" class="form-control" id="staticPrice" value="16">
                                        </div>
                                    </div>   
                                </div>
                                <div class="row">
                                    <div class="col-md-5"></div>
                                    <div class="col-md-4" align="right">
                                        <p>Best price:</p>
                                    </div> 
                                    <div class="col-md-3 align-self-center">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="basic-addon2"><i class="fas fa-euro-sign"></i></span>
                                            </div>
                                            <input readonly type="text" class="form-control" id="staticPrice" value="8">
                                        </div>
                                    </div>  
                                </div>
                                <form class="form-group row">
                                    <!--label for="staticPrice" class="sr-only">Notify me when the price is below: </label-->
                                    <div class="col-md-5"></div>
                                    <div class="col-md-4" align="right"><p>Notify me when the price is below:</p></div>
                                    <div class="col-md-3 align-self-center">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="basic-addon2"><i class="fas fa-euro-sign"></i></span>
                                            </div>
                                            <input type="text" class="form-control" id="staticPrice" placeholder="10">
                                            <button class="btn btn-primary"><i class="fas fa-bell"></i></button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div class="image-parent">
                                <img src="https://s3.eu-central-1.amazonaws.com/bootstrapbaymisc/blog/24_days_bootstrap/things_fall_apart.jpg" class="img-fluid" alt="things">
                                Game 3
                            </div>
                            <div>
                                <div class="row">
                                    <div class="col-md-5"></div>
                                    <div class="col-md-4" align="right">
                                        <p>Steam price:</p>
                                    </div>
                                    <div class="col-md-3 align-self-center">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="basic-addon2"><i class="fas fa-euro-sign"></i></span>
                                            </div>
                                            <input readonly type="text" class="form-control" id="staticPrice" value="16">
                                        </div>
                                    </div>   
                                </div>
                                <div class="row">
                                    <div class="col-md-5"></div>
                                    <div class="col-md-4" align="right">
                                        <p>Best price:</p>
                                    </div> 
                                    <div class="col-md-3 align-self-center">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="basic-addon2"><i class="fas fa-euro-sign"></i></span>
                                            </div>
                                            <input readonly type="text" class="form-control" id="staticPrice" value="8">
                                        </div>
                                    </div>  
                                </div>
                                <form class="form-group row">
